<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <!-- add icon link -->
    <link
      rel="icon"
      href="https://png.pngtree.com/png-clipart/20180626/ourlarge/pngtree-instagram-icon-instagram-logo-png-image_3584852.png"
      type="image/x-icon"
    />
    <title><%= title %></title>
    <style>
      .messages-content {
        margin-left: auto;
        margin-right: auto;
        width: max-content;
        display: flex;
        background-color: white;
        border: 1px solid #dbdbdb;
        height: 90vh;
      }

      .profile-username {
        border-bottom: 1px solid #dbdbdb;
        display: flex;
        padding: 10px 0px;
        align-items: center;
        justify-content: center;
      }

      .profile-switch-button {
        padding: 8px;
      }

      .recent-conversations-list {
        list-style-type: none;
        padding: 0px;
        height: 90%;
        overflow: scroll;
      }

      .recent-conversations-list-item {
        display: flex;
        align-items: center;
        padding: 8px 20px;
      }

      .recent-conversations-list-item-right-container {
        width: 228px;
      }

      .receipent-avatar {
        height: 56px;
        width: 56px;
        border-radius: 50%;
        margin-right: 12px;
      }

      .receipent-username {
        font-size: 18px;
        font-weight: 400;
        margin-bottom: 5px;
        color: black;
      }

      .receipent-activity {
        font-size: 14px;
        color: rgba(0, 0, 0, 0.8);
      }

      .recent-messages-container {
        border-left: 1px solid #dbdbdb;
        width: 536px;
        padding: 24px;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .recent-messages-default-container-title {
        font-size: 22px;
        text-align: center;
      }

      .recent-messages-default-container-description {
        font-size: 14px;
        margin-top: 16px;
        color: rgba(0, 0, 0, 0.6);
        text-align: center;
      }

      .recent-messages-default-container-send-button {
        text-align: center;
      }
      .recent-messages-default-container-send-button button {
        font-size: 14px;
        background-color: rgb(0, 149, 246);
        color: white;
        border-radius: 4px;
        border: none;
        padding: 5px 9px;
        margin-top: 24px;
      }
    </style>
  </head>
  <body style="background-color: #fafafa">
    <!-- Include nav bar -->
    <%- include('partials/navbar.ejs') %>

    <div class="body-container" style="padding-top: 75px; padding-bottom: 20px">
      <div class="messages-content-container">
        <div class="messages-content">
          <div class="recent-conversations-container">
            <div class="profile-username">
              <div class="profile-username-title">thats.me.akhil</div>
              <div class="profile-switch-button">
                <svg
                  aria-label="Down Chevron Icon"
                  class="_8-yf5"
                  color="#262626"
                  fill="#262626"
                  height="20"
                  role="img"
                  viewBox="0 0 48 48"
                  width="20"
                >
                  <path
                    d="M40 33.5c-.4 0-.8-.1-1.1-.4L24 18.1l-14.9 15c-.6.6-1.5.6-2.1 0s-.6-1.5 0-2.1l16-16c.6-.6 1.5-.6 2.1 0l16 16c.6.6.6 1.5 0 2.1-.3.3-.7.4-1.1.4z"
                  ></path>
                </svg>
              </div>
              <div class="create-new-message-button">
                <svg
                  aria-label="New Message"
                  class="_8-yf5"
                  color="#262626"
                  fill="#262626"
                  height="24"
                  role="img"
                  viewBox="0 0 44 44"
                  width="24"
                >
                  <path
                    d="M33.7 44.12H8.5a8.41 8.41 0 01-8.5-8.5v-25.2a8.41 8.41 0 018.5-8.5H23a1.5 1.5 0 010 3H8.5a5.45 5.45 0 00-5.5 5.5v25.2a5.45 5.45 0 005.5 5.5h25.2a5.45 5.45 0 005.5-5.5v-14.5a1.5 1.5 0 013 0v14.5a8.41 8.41 0 01-8.5 8.5z"
                  ></path>
                  <path
                    d="M17.5 34.82h-6.7a1.5 1.5 0 01-1.5-1.5v-6.7a1.5 1.5 0 01.44-1.06L34.1 1.26a4.45 4.45 0 016.22 0l2.5 2.5a4.45 4.45 0 010 6.22l-24.3 24.4a1.5 1.5 0 01-1.02.44zm-5.2-3h4.58l23.86-24a1.45 1.45 0 000-2l-2.5-2.5a1.45 1.45 0 00-2 0l-24 23.86z"
                  ></path>
                  <path
                    d="M38.2 14.02a1.51 1.51 0 01-1.1-.44l-6.56-6.56a1.5 1.5 0 012.12-2.12l6.6 6.6a1.49 1.49 0 010 2.12 1.51 1.51 0 01-1.06.4z"
                  ></path>
                </svg>
              </div>
            </div>
            <ul class="recent-conversations-list" style="list-style-type: none">
              <% for(var i=0;i<25;i++) { %>
              <li>
                <a href="" style="text-decoration: none">
                  <div class="recent-conversations-list-item">
                    <div class="recent-conversations-list-item-left-container">
                      <img
                        class="receipent-avatar"
                        src="https://picsum.photos/seed/<%= Math.floor(Math.random()*1000) %>/600/600"
                      />
                    </div>
                    <div class="recent-conversations-list-item-right-container">
                      <div class="receipent-username">thats.me.akhil</div>
                      <div class="receipent-activity">hello, how are you ?</div>
                    </div>
                  </div>
                </a>
              </li>
              <% } %>
            </ul>
          </div>
          <div class="recent-messages-container">
            <div class="recent-messages-default-container">
              <div class="recent-messages-default-container-title">
                Your Messages
              </div>
              <div class="recent-messages-default-container-description">
                Send private photos and messages to a friend or group.
              </div>
              <div class="recent-messages-default-container-send-button">
                <button>Send Message</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
